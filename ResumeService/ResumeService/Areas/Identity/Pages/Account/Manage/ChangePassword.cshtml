@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Password Maintenance";

}
    <div class="row">
        <partial name="_ManageNav" />
        <div class="col-sm-5">
            <h4>@ViewData["Title"]</h4>
            <hr />
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="form-text small">Current Password</label>
                    <input asp-for="@Model.OldPassword" class="form-control" />
                    <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-text small">New Password</label>
                    <input asp-for="@Model.NewPassword" class="form-control" />
                    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-text small">Confirm New Password</label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Password</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}