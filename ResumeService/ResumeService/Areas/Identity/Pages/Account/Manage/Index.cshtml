@page
@model IndexModel
@{
    ViewData["Title"] = "Profile Maintenance";
}

    <div class="row">
        <partial name="_ManageNav"/>
        <div class="col-sm-10">
            <h4>@ViewData["Title"]</h4>
            <hr/>
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <label class="form-text small">First Name</label>
                        <input type="text" asp-for="@Model.FirstName" value="@Model.FirstName" class="form-control" required />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>

                        <label class="form-text small">Last Name</label>
                        <input type="text" asp-for="@Model.LastName" value="@Model.LastName" class="form-control" required  />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>

                        <label class="form-text small">Birthdate</label>
                        <input type="date" asp-for="@Model.Birthdate" value="@Model.Birthdate.ToString("yyyy-MM-dd")" class="form-control" required />
                        <span asp-validation-for="@Model.Birthdate" class="text-danger"></span>

                        <label class="form-text small">Company</label>
                        <input asp-for="@Model.Company" value="@Model.Company" class="form-control" />

                    </div>

                    <div class="col">
                        <div class="form-group">
                            <label class="form-text small">Username</label>
                            <input type="text" asp-for="@Model.Username" value="@Model.Username" class="form-control" required />
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>

                            <label class="form-text small">Email</label>
                            <input asp-for="Email" class="form-control" disabled />

                            <label class="form-text small">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />

                            <label class="form-text small">Job Title</label>
                            <input asp-for="JobTitle" class="form-control" />
                        </div>
                    </div>
                </div>
                <hr />
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}