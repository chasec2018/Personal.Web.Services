@page
@model AdminPortalModel
@{
    ViewData["Title"] = "Management";
}

<h4 class="h4">Management</h4>
<hr/>
<div class="row">
    <div class="col-sm-3">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-users-list" data-toggle="list" href="#list-users" role="tab" aria-controls="users">Users</a>
            <a class="list-group-item list-group-item-action" id="list-activity-list" data-toggle="list" href="#list-activity" role="tab" aria-controls="activity">Activity</a>
        </div>
    </div>

    <div class="col-sm-9">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-users" role="tabpanel" aria-labelledby="list-users-list">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Email Verified</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Affiliation</th>
                            <th scope="col">Job Title</th>
                        </tr>
                    </thead>

                    <tbody class="small">
                        @foreach (var User in Model.Users)
                        {
                            <tr>
                                <td>@User.FirstName</td>
                                <td>@User.LastName</td>
                                <td>@User.Email</td>
                                <td>@User.EmailConfirmed</td>
                                <td>@User.PhoneNumber</td>
                                <td>@User.Company</td>
                                <td>@User.JobTitle</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="list-activity" class="tab-pane fade">

            </div>

        </div>
    </div>
</div>

