                                        @for (int i = 0; i < Model.TechnicalAbilities.EtlTools.Count; i++)
                                        {
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <h6 class="h6 small">@Model.TechnicalAbilities.EtlTools[i].Technology</h6>
                                                </div>
                                                <div class="col-sm-10">
