                                            </div>
                                        }
                                    </div>
                                }
                                @if (Model.TechnicalAbilities.DesignPatterns.Count > 0)
                                {
                                    <div class="tab-pane fade" id="list-design-patterns" role="tabpanel" aria-labelledby="list-design-patterns-list">
                                        @for (int i = 0; i < Model.TechnicalAbilities.DesignPatterns.Count; i++)
                                        {
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <h6 class="h6 small">@Model.TechnicalAbilities.DesignPatterns[i].Technology</h6>
                                                </div>
                                                <div class="col-sm-10">
                                                    <p class="small">
                                                        @Model.TechnicalAbilities.DesignPatterns[i].TechnologyUse
                                                    </p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                @if (Model.TechnicalAbilities.Networking.Count > 0)
                                {
                            <div class="tab-pane fade" id="list-networking" role="tabpanel" aria-labelledby="list-networking-list">
                                @for (int i = 0; i < Model.TechnicalAbilities.Networking.Count;i++)
                                {
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <h6 class="h6 small">@Model.TechnicalAbilities.Networking[i].Technology</h6>
                                        </div>
                                        <div class="col-sm-10">
                                            <p class="small">
                                                @Model.TechnicalAbilities.Networking[i].TechnologyUse
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                                }
                                @if (Model.TechnicalAbilities.Other.Count > 0)
                                {
                                    <div class="tab-pane fade" id="list-other" role="tabpanel" aria-labelledby="list-other-list">
                                        @for (int i = 0; i < Model.TechnicalAbilities.Other.Count; i++)
                                        {
                                            <div class="row">
                                                <div class="col-sm-2">
